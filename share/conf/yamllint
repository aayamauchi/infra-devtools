---

# This is a version which works with version 1.8.1, which is the latest
# available at the time of this check-in.  Using the following alias and
# copying this file where indicated works well, although one could always
# overwrite the default configuration if no one else uses the system.
#
# alias yamllint='yamllint -c ~/.yamllint -f parsable'

rules:
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 0
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 0
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
  colons:
    max-spaces-before: -1
    max-spaces-after: -1
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1
  comments:
    level: warning
    require-starting-space: no
    min-spaces-from-content: 2
  comments-indentation: disable
#    level: warning
  document-end: disable
  document-start: disable
#    level: warning
#    present: yes
  empty-lines:
    max: 2
    max-start: 0
    max-end: 0
  hyphens:
    max-spaces-after: 1
  indentation:
    spaces: consistent
    indent-sequences: consistent
    check-multi-line-strings: no
  key-duplicates: enable
  line-length:
    max: 1000
    allow-non-breakable-words: yes
    allow-non-breakable-inline-mappings: yes
  new-line-at-end-of-file: enable
  new-lines:
    type: unix
  trailing-spaces: enable
